<h2>Categories list:</h2>
<hr>
<a href="/admin/categories/add">
	<button class="btn btn-success">New category</button>
</a>

{{#each categories}}
	<div class="card mt-4">
		<div class="card-body">
			<h4>{{this.name}}</h4>
			<small>{{this.slug}}</small>
			<br>
			<a href="/admin/categories/edit/{{this._id}}">
				<button class="btn btn-success mt-2">Edit</button>
			</a>
			<form action="/admin/categories/delete" method="POST">
				<input type="hidden" name="id" value="{{this._id}}">
				<button type="submit" class="btn btn-danger mt-2">Delete</button>
			</form>
		</div>
	</div>
{{else}}
	<h4>There aren't categories created yet.</h4>

{{/each}}