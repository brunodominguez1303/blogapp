{{#each errors}}
	<div class="alert alert-danger">{{text}}</div>
	{{else}}

{{/each}}
<h3>Edit category:</h3>
<div class="card">
	<div class="card-body">
		<form action="/admin/categories/edit" method="POST">
			<input type="hidden" name="id" value="{{showId}}">
			<label for="name">Name:</label>
			<input type="text" id="name" name="name" placeholder="Category name" class="form-control" value="{{showName}}">
			<label for="slug">Slug:</label>
			<input type="text" id="slug" name="slug" placeholder="Slug name" class="form-control" value="{{showSlug}}">
			<button type="submit" class="btn btn-success mt-2">Save</button>
		</form>
	</div>
</div>